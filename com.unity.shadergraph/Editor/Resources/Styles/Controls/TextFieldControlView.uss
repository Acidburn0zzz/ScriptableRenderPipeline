TextFieldControlView {
    flex-direction: column;
    flex-grow: 1;
    padding-left: 8;
    padding-right: 8;
    padding-top: 4;
    padding-bottom: 4;
}

TextFieldControlView > Label {
    margin-left: 0;
    margin-right: 0;
    cursor: slide-arrow;
}

TextFieldControlView > TextField {
    flex-direction: column;
    flex-grow: 1;
    margin-left: 0;
    margin-right: 0;
    min-width: 30;
}
